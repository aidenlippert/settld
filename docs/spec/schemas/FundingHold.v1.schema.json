{
  "$id": "https://settld.local/schemas/FundingHold.v1.schema.json",
  "title": "FundingHold.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "artifactType",
    "artifactId",
    "tenantId",
    "agreement",
    "payerAgentId",
    "amountCents",
    "currency",
    "lockedAt",
    "holdHash",
    "signature"
  ],
  "properties": {
    "schemaVersion": { "const": "FundingHold.v1" },
    "artifactType": { "const": "FundingHold.v1" },
    "artifactId": { "type": "string", "minLength": 1 },
    "tenantId": { "type": "string", "minLength": 1 },
    "agreement": {
      "type": "object",
      "additionalProperties": false,
      "required": ["artifactId", "agreementHash"],
      "properties": {
        "artifactId": { "type": "string", "minLength": 1 },
        "agreementHash": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
      }
    },
    "payerAgentId": { "type": "string", "minLength": 1 },
    "amountCents": { "type": "integer", "minimum": 0 },
    "currency": { "type": "string", "minLength": 1 },
    "lockedAt": { "type": "string", "minLength": 1 },
    "expiresAt": { "type": "string", "minLength": 1 },
    "holdHash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "signature": {
      "type": "object",
      "additionalProperties": false,
      "required": ["signerKeyId", "signedAt", "signature"],
      "properties": {
        "signerKeyId": { "type": "string", "minLength": 1 },
        "signedAt": { "type": "string", "minLength": 1 },
        "signature": { "type": "string", "minLength": 1 }
      }
    },
    "artifactHash": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
  }
}
