{
  "$id": "https://settld.local/schemas/SettlementReceipt.v2.schema.json",
  "title": "SettlementReceipt.v2",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "artifactType",
    "artifactId",
    "tenantId",
    "agreement",
    "decision",
    "transfer",
    "agreementAmountCents",
    "outcome",
    "settledAt",
    "receiptHash",
    "signature"
  ],
  "properties": {
    "schemaVersion": { "const": "SettlementReceipt.v2" },
    "artifactType": { "const": "SettlementReceipt.v2" },
    "artifactId": { "type": "string", "minLength": 1 },
    "tenantId": { "type": "string", "minLength": 1 },
    "agreement": {
      "type": "object",
      "additionalProperties": false,
      "required": ["artifactId", "agreementHash"],
      "properties": {
        "artifactId": { "type": "string", "minLength": 1 },
        "agreementHash": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
      }
    },
    "decision": {
      "type": "object",
      "additionalProperties": false,
      "required": ["artifactId", "recordHash"],
      "properties": {
        "artifactId": { "type": "string", "minLength": 1 },
        "recordHash": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
      }
    },
    "transfer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["payerAgentId", "payeeAgentId", "amountCents", "currency"],
      "properties": {
        "payerAgentId": { "type": "string", "minLength": 1 },
        "payeeAgentId": { "type": "string", "minLength": 1 },
        "amountCents": { "type": "integer", "minimum": 0 },
        "currency": { "type": "string", "minLength": 1 }
      }
    },
    "agreementAmountCents": { "type": "integer", "minimum": 0 },
    "outcome": { "type": "string", "enum": ["paid", "not_paid", "expired", "reversed"] },
    "retention": {
      "type": "object",
      "additionalProperties": false,
      "required": ["heldAmountCents", "holdbackBps", "challengeWindowMs", "challengeUntil"],
      "properties": {
        "heldAmountCents": { "type": "integer", "minimum": 1 },
        "holdbackBps": { "type": "integer", "minimum": 1, "maximum": 10000 },
        "challengeWindowMs": { "type": "integer", "minimum": 1 },
        "challengeUntil": { "type": "string", "minLength": 1 }
      }
    },
    "ledger": { "type": ["object", "null"], "additionalProperties": true },
    "settledAt": { "type": "string", "minLength": 1 },
    "receiptHash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "signature": {
      "type": "object",
      "additionalProperties": false,
      "required": ["signerKeyId", "signedAt", "signature"],
      "properties": {
        "signerKeyId": { "type": "string", "minLength": 1 },
        "signedAt": { "type": "string", "minLength": 1 },
        "signature": { "type": "string", "minLength": 1 }
      }
    },
    "artifactHash": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
  }
}

