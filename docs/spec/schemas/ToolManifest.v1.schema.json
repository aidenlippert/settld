{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://settld.local/schemas/ToolManifest.v1.schema.json",
  "title": "ToolManifest.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "toolId",
    "tenantId",
    "name",
    "tool",
    "transport",
    "createdAt",
    "updatedAt",
    "manifestHash",
    "signature"
  ],
  "properties": {
    "schemaVersion": { "const": "ToolManifest.v1" },
    "toolId": {
      "type": "string",
      "minLength": 3,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9:_-]+$"
    },
    "tenantId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9:_-]+$"
    },
    "name": { "type": "string", "minLength": 1, "maxLength": 200 },
    "description": { "type": "string", "maxLength": 4000 },
    "tool": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "description", "inputSchema"],
      "properties": {
        "name": { "type": "string", "minLength": 1, "maxLength": 200 },
        "description": { "type": "string", "minLength": 1, "maxLength": 4000 },
        "inputSchema": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "transport": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "url"],
      "properties": {
        "kind": { "type": "string", "enum": ["mcp"] },
        "url": { "type": "string", "minLength": 1, "maxLength": 2000 }
      }
    },
    "capabilities": {
      "type": "array",
      "maxItems": 256,
      "uniqueItems": true,
      "items": { "type": "string", "minLength": 1, "maxLength": 128 }
    },
    "pricing": {
      "type": "object",
      "additionalProperties": true
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" },
    "manifestHash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "signature": {
      "type": "object",
      "additionalProperties": false,
      "required": ["signerKeyId", "signedAt", "signature"],
      "properties": {
        "signerKeyId": { "type": "string", "minLength": 1, "maxLength": 200 },
        "signedAt": { "type": "string", "format": "date-time" },
        "signature": { "type": "string", "minLength": 1, "maxLength": 2000 }
      }
    }
  }
}

